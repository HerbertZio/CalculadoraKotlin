<resources>

    <!-- Estilo para os botões de números -->
    <style name="ButtonStyle">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:minHeight">64dp</item>
    </style>

    <style name="ButtonStyleC">
        <item name="android:background">@drawable/button_background_c</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:minHeight">64dp</item>
    </style>
    <!-- Estilo para os botões de operações (C, %, /, etc.) -->
    <style name="ButtonStyleLight">
        <item name="android:background">@drawable/button_background_light</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:minHeight">64dp</item>
    </style>

    <!-- Estilo para o botão de igual (=) -->
    <style name="ButtonStyleEquals">
        <item name="android:background">@drawable/button_background_equals</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:minHeight">64dp</item>
    </style>

</resources>
